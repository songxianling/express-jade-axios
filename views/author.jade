style
    include ../public/stylesheets/css/author.css
include layout
block content
    .author-page
        .author-content-box
            img.author-bg-img(src="#{modelObj.userInfo.img}", alt="")
            // 头部
            .author-box
                //- section.author-head
                //-     span 是现令啊
                // 作者信息区域    
                section.author-info
                    .con-top.clearfix
                        img.author-img(src="#{modelObj.userInfo.img}", alt="作者头像") 
                        .author-data   
                            .item
                                p.num #{modelObj.userOther.funNum}
                                p.name 粉丝
                            .item
                                p.num #{modelObj.userOther.followNum}
                                p.name 关注
                            .item
                                p.num #{modelObj.userOther.praiseNum}
                                p.name 获赞
                            a.open-app-btn(href="javascript:;") 打开APP关注我 

                    p.author-autograph.ellipsis-2   #{modelObj.userInfo.info}
        if modelObj.hotVideoList.length             
            section.author-works-box
                ul#js-author-works-ul.clearfix
                    each item,index in modelObj.hotVideoList
                        li.item
                            img.video-img.lazy-load(data-original="#{item.imgUrl}", alt="")
                            .video-info
                                p.author-name 
                                    img.collection-img(src="/images/collection-small-icon.png", alt="", srcset="")
                                    span #{item.connectInfo.collectNum}
                                                   
        // 底部默认提示语                                               
        include xsjPlaceholder          
block script
    script(src='/javascripts/jquery.lazyload.js')
    script.
        $(document).ready(function() {
            $('img.lazy-load').lazyload({
                effect: 'fadeIn',   // 渐现，show(直接显示),fadeIn(淡入),slideDown(下拉)
                threshold: -20 // 预加载，在图片距离屏幕px时提前载入
            })
        })                            